@using Contacts.Web.Models.PersonViewModels;


@{
    ViewData["Title"] = "Update";
    Layout = "_ExampleLayout";
}

@model UpdatePersonViewModel

@if (ViewData["UpdateError"] is not null)
{
    <div class="alert alert-danger" role="alert"> @ViewData["UpdateError"] </div>
}

<div class="col-md-12" style="margin-top: 20px;">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Kişi Güncelleme Ekranı</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="card-refresh" data-source-selector="#card-refresh-content" data-load-on-init="false">
                    <i class="fas fa-sync-alt"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="maximize">
                    <i class="fas fa-expand"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">


            <form asp-controller="Person" asp-action="UpdatePerson" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div class="form-group">
                        <label>Kişi İsim:</label>
                        <input asp-for="Name" name="Name" type="text" class="form-control" placeholder="Kişi ismini giriniz..">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Kişi Soyisim:</label>
                        <input asp-for="Surname" name="Surname" type="text" class="form-control" placeholder="Kişi soyisim giriniz..">
                    </div>
                    <div class="form-group">
                        <label>Yaş:</label>
                        <input asp-for="Age" name="Age" type="number" class="form-control" placeholder="Yaş  giriniz..">
                    </div>
                    <div class="form-group">
                        <label>Cinsiyet:</label>
                        <div class="form-group">
                            <select class="form-control" asp-for="Gender" name="Gender">
                                <option>Kız</option>
                                <option>Erkek</option>
                                <option>Belirtmek istemiyor</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Adres:</label>
                        <input asp-for="Address" name="Address" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input asp-for="Email" name="Email" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>GitHub:</label>
                        <input asp-for="GitHub" name="GitHub" type="text" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-block bg-gradient-warning">Güncelle</button>
                </div>
                <!-- /.card-body -->

            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

